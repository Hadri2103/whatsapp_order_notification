<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.whatsapp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="WhatsApp Notifications" string="WhatsApp Notifications" data-key="whatsapp_notifications">
                    <h2>WhatsApp Order Notifications</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="whatsapp_api_token"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="whatsapp_api_token"/>
                                <div class="text-muted">
                                    Twilio credentials in format: ACCOUNT_SID|AUTH_TOKEN
                                </div>
                                <field name="whatsapp_api_token" password="True" placeholder="ACxxxxxxx|your_auth_token"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="whatsapp_from_number"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="whatsapp_from_number"/>
                                <div class="text-muted">
                                    Your Twilio WhatsApp-enabled phone number
                                </div>
                                <field name="whatsapp_from_number" placeholder="+14155551234"/>
                            </div>
                        </div>
                    </div>
                    <h2>Employee Notifications</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="whatsapp_employee_phone"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="whatsapp_employee_phone"/>
                                <div class="text-muted">
                                    Phone number of the employee to notify for new orders (with country code)
                                </div>
                                <field name="whatsapp_employee_phone" placeholder="+1234567890"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="whatsapp_customer_template_sid"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="whatsapp_customer_template_sid"/>
                                <div class="text-muted">
                                    Twilio WhatsApp template SID for customer notifications
                                </div>
                                <field name="whatsapp_customer_template_sid" placeholder="HX8264756fadd035142c0905cca6b6b594"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="whatsapp_employee_template_sid"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="whatsapp_employee_template_sid"/>
                                <div class="text-muted">
                                    Twilio WhatsApp template SID for employee notifications
                                </div>
                                <field name="whatsapp_employee_template_sid" placeholder="HX3e140b59baa66fb67a2172a7442ec2d1"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>